{
  "name": "@ez4/validation",
  "description": "EZ4: Components to build validation services",
  "version": "0.42.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ez4",
    "service",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbalmt/ez4.git",
    "directory": "contracts/validation"
  },
  "engines": {
    "node": ">=22.7"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs"
    },
    "./library": {
      "types": "./dist/library.d.ts",
      "require": "./dist/library.cjs",
      "import": "./dist/library.mjs"
    },
    "./test": {
      "types": "./dist/test.d.ts",
      "require": "./dist/test.cjs",
      "import": "./dist/test.mjs"
    }
  },
  "sideEffects": [
    "./dist/library.cjs",
    "./dist/library.mjs"
  ],
  "workspaces": [
    "foundation/*",
    "contracts/*"
  ],
  "scripts": {
    "lint": "eslint --cache",
    "clean": "rm -rf dist/* *.tsbuildinfo .eslintcache",
    "build": "tsc && node tools/bundler.mjs",
    "test": "npm run build && tsc -p tsconfig.test.json && ez4 test",
    "local:publish": "npm run build && npm run clean:registry && npm publish --registry http://localhost:4873",
    "clean:registry": "rm -rf ../../.registry/@ez4/validation",
    "live:publish": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "@ez4/common": "^0.42.0",
    "@ez4/project": "^0.42.0",
    "@ez4/reflection": "^0.42.0",
    "@ez4/schema": "^0.42.0",
    "@ez4/utils": "^0.42.0",
    "@ez4/validator": "^0.42.0"
  }
}