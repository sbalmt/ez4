{
  "compilerOptions": {
    "target": "es2024",
    "moduleResolution": "bundler",
    "module": "preserve",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules"
  ]
}