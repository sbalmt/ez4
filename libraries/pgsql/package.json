{
  "name": "@ez4/pgsql",
  "description": "EZ4: A PostgreSQL builder",
  "version": "0.36.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ez4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbalmt/ez4.git",
    "directory": "libraries/pgsql"
  },
  "engines": {
    "node": ">=22.7"
  },
  "exports": {
    "types": "./dist/main.d.ts",
    "require": "./dist/main.cjs",
    "import": "./dist/main.mjs"
  },
  "sideEffects": false,
  "workspaces": [
    "contracts/*",
    "libraries/*"
  ],
  "scripts": {
    "lint": "eslint --cache",
    "clean": "rm -f *.tsbuildinfo && rm -rf dist/*",
    "build": "tsc && node tools/bundler.mjs",
    "test": "npm run build && tsc -p tsconfig.test.json && ez4 test",
    "local:publish": "npm run build && npm run clean:registry && npm publish --registry http://localhost:4873",
    "clean:registry": "rm -rf ../../.registry/@ez4/pgsql",
    "live:publish": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "@ez4/database": "^0.36.0",
    "@ez4/schema": "^0.36.0",
    "@ez4/utils": "^0.36.0"
  }
}