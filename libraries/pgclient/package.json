{
  "name": "@ez4/pgclient",
  "description": "EZ4: A PostgreSQL client",
  "version": "0.26.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ez4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbalmt/ez4.git",
    "directory": "libraries/pgclient"
  },
  "engines": {
    "node": ">=22.7"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs"
    },
    "./library": {
      "types": "./dist/library.d.ts",
      "require": "./dist/library.cjs",
      "import": "./dist/library.mjs"
    }
  },
  "workspaces": [
    "contracts/*",
    "libraries/*"
  ],
  "scripts": {
    "lint": "eslint --cache",
    "clean": "rm -f *.tsbuildinfo && rm -rf dist/*",
    "build": "tsc -p tsconfig.json && node tools/bundler.mjs",
    "test": "npm run test:types && node --test --import ../../tools/tsnode.mjs test/*.spec.ts",
    "test:client": "npm run test:types && node --test --import ../../tools/tsnode.mjs test/client-*.spec.ts",
    "test:only": "npm run test:types && node --test-only --test --import ../../tools/tsnode.mjs test/*.spec.ts",
    "test:types": "npm run build && tsc -p tsconfig.test.json",
    "local:publish": "npm run build && npm run clean:registry && npm publish --registry http://localhost:4873",
    "clean:registry": "rm -rf ../../.registry/@ez4/pgclient",
    "live:publish": "npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5"
  },
  "dependencies": {
    "@ez4/common": "^0.26.0",
    "@ez4/database": "^0.26.0",
    "@ez4/pgsql": "^0.26.0",
    "@ez4/project": "^0.26.0",
    "@ez4/schema": "^0.26.0",
    "@ez4/transform": "^0.26.0",
    "@ez4/utils": "^0.26.0",
    "@ez4/validator": "^0.26.0",
    "pg": "^8.16.3"
  }
}