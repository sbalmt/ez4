{
  "name": "@ez4/project",
  "description": "EZ4: Combine all framework pieces",
  "version": "0.39.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ez4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbalmt/ez4.git",
    "directory": "foundation/project"
  },
  "bin": {
    "ez4": "./bin/cli.mjs"
  },
  "engines": {
    "node": ">=22.7"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs"
    },
    "./library": {
      "types": "./dist/library.d.ts",
      "require": "./dist/library.cjs",
      "import": "./dist/library.mjs"
    }
  },
  "workspaces": [
    "foundation/*"
  ],
  "scripts": {
    "lint": "eslint --cache",
    "clean": "rm -f *.tsbuildinfo && rm -rf bin/* && rm -rf dist/*",
    "build": "tsc && node tools/bundler.mjs",
    "test": "npm run build && tsc -p tsconfig.test.json && ez4 test",
    "local:publish": "npm run build && npm run clean:registry && npm publish --registry http://localhost:4873",
    "clean:registry": "rm -rf ../../.registry/@ez4/project",
    "live:publish": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "@ez4/reflection": "^0.39.0",
    "@ez4/stateful": "^0.39.0",
    "@ez4/utils": "^0.39.0"
  }
}