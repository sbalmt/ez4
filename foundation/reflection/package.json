{
  "name": "@ez4/reflection",
  "description": "EZ4: Build source code reflection from typescript files",
  "version": "0.27.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ez4"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbalmt/ez4.git",
    "directory": "foundation/reflection"
  },
  "engines": {
    "node": ">=22.7"
  },
  "exports": {
    "types": "./dist/main.d.ts",
    "require": "./dist/main.cjs",
    "import": "./dist/main.mjs"
  },
  "workspaces": [
    "foundation/*"
  ],
  "scripts": {
    "lint": "eslint --cache",
    "clean": "rm -f *.tsbuildinfo && rm -rf dist/*",
    "build": "tsc && node tools/bundler.mjs",
    "test": "npm run build && ez4 test",
    "local:publish": "npm run build && npm run clean:registry && npm publish --registry http://localhost:4873",
    "clean:registry": "rm -rf ../../.registry/@ez4/reflection",
    "live:publish": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  }
}