{
  "name": "@ez4/monorepo",
  "description": "EZ4 Monorepo",
  "version": "0.0.0",
  "author": "Silas B.",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.7"
  },
  "workspaces": [
    "foundation/utils",
    "foundation/stateful",
    "foundation/reflection",
    "foundation/project",
    "foundation/logger",
    "foundation/common",
    "foundation/schema",
    "foundation/validator",
    "foundation/transform",
    "contracts/gateway",
    "contracts/database",
    "contracts/scheduler",
    "contracts/storage",
    "contracts/distribution",
    "contracts/queue",
    "contracts/topic",
    "contracts/factory",
    "contracts/validation",
    "libraries/pgsql",
    "libraries/pgclient",
    "libraries/pgmigration",
    "providers/local/local-common",
    "providers/local/local-scheduler",
    "providers/local/local-database",
    "providers/local/local-storage",
    "providers/local/local-gateway",
    "providers/local/local-queue",
    "providers/local/local-topic",
    "providers/docs/docs-database",
    "providers/docs/docs-gateway",
    "providers/docs/docs-gateway-ui",
    "providers/docs/docs-topology",
    "providers/aws/aws-common",
    "providers/aws/aws-identity",
    "providers/aws/aws-logs",
    "providers/aws/aws-function",
    "providers/aws/aws-scheduler",
    "providers/aws/aws-dynamodb",
    "providers/aws/aws-aurora",
    "providers/aws/aws-gateway",
    "providers/aws/aws-bucket",
    "providers/aws/aws-queue",
    "providers/aws/aws-topic",
    "providers/aws/aws-certificate",
    "providers/aws/aws-cloudfront",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky",
    "prettify": "npx prettier 'foundation/**/*.ts' 'contracts/**/*.ts' 'libraries/**/*.ts' 'providers/**/*.ts' --write",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "generate:topology": "npm run generate:topology --workspaces --if-present",
    "generate:oas": "npm run generate:oas --workspaces --if-present",
    "generate:erd": "npm run generate:erd --workspaces --if-present",
    "test:only": "npm run test:only --workspaces --if-present",
    "local:publish": "npm run local:publish --workspaces --if-present",
    "local:registry": "rm -rf .registry/* && node tools/verdaccio.mjs",
    "live:publish": "npm run build && npm run live:publish --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "esbuild": "^0.25.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.2",
    "typescript": "^5.8.3",
    "verdaccio": "^6.0.5"
  }
}